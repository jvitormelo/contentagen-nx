const year = new Date().getFullYear();
---

<footer class=" bg-muted">
  <div class="container mx-auto p-4 flex flex-col justify-center items-center space-y-8">
    <div class="flex items-center gap-4 justify-center">

      <Logo class="size-12 text-primary" />
      <span class="font-bold text-xl text-primary">{brandConfig.name}</span>
    </div>
      
    
    <div class=" flex flex-wrap justify-center gap-4 text-sm">
      {socialLinks.map(social => (
        <a
          href={social.href}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={social.label}
          class="text-muted-foreground hover:text-primary block"
          set:html={social.svg}
        />
      ))}
    </div>
    <span class="text-muted-foreground block text-center text-sm">
      Â© {year} Contentagen. All rights reserved. | Privacy Policy | Terms of Service
    </span>
  </div>
</footer>
