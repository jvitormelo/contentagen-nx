---
import { Download, Github, Play, Terminal } from "@lucide/astro";
import { Button } from "@packages/ui/components/button";

const steps = [
  {
    command: "git clone https://github.com/Yorizel/ear-monorepo.git",
    description:
      "Get the latest version of the EAR stack with all configurations ready",
    icon: Download,
    title: "Clone Repository",
  },
  {
    command: "pnpm install",
    description:
      "Install all dependencies using pnpm workspaces for optimal performance",
    icon: Terminal,
    title: "Install Dependencies",
  },
  {
    command: "pnpm dev",
    description:
      "Start all development servers with Turborepo and begin building",
    icon: Play,
    title: "Start Development",
  },
];
---

<section id="get-started" class="min-h-screen snap-start flex items-center justify-center flex-col container mx-auto gap-4">
    <div class="flex flex-col gap-4 items-center text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white">
        Get Started
      </h2>
      <p class="text-base md:text-lg text-gray-400 max-w-2xl md:max-w-3xl mx-auto leading-relaxed">
        Get up and running with the EAR stack in just a few simple steps
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 ">
      {steps.map((step, index) => (
        <div
          class="group relative overflow-hidden rounded-3xl bg-gradient-to-br border backdrop-blur-sm hover:scale-[1.02] transition-all duration-700 ease-out hover:shadow-2xl from-stone-700/10 via-stone-700/5 to-transparent border-white/10 shadow-stone-500/10 bento-card flex flex-col items-center"
          style={`animation-delay: ${index * 200}ms`}
        >
          <!-- Animated background -->
          <div class="absolute inset-0 bg-gradient-to-br from-white/[0.08] via-white/[0.02] to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
          <!-- Floating orb effect -->
          <div class="absolute -top-24 -right-24 w-48 h-48 bg-gradient-to-br from-white/10 to-transparent rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-1000"></div>
          <div class="relative h-full flex flex-col items-center px-2 w-full">
            <div class="flex items-center justify-center w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-xl mb-4 shadow-lg mt-8">
              <step.icon class="w-6 h-6 text-white" />
            </div>
            <h3 class="text-lg font-bold text-white mb-2 text-center">{step.title}</h3>
            <p class="text-gray-300 text-center mb-4 text-sm leading-relaxed">{step.description}</p>
            <div class="bg-black/30 rounded-xl p-3 border border-white/10 backdrop-blur-sm w-full mb-4">
              <code class="text-green-400 text-xs font-mono break-all">{step.command}</code>
            </div>
          </div>
          <!-- Shimmer effect -->
          <div class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 bg-gradient-to-r from-transparent via-white/10 to-transparent skew-x-12"></div>
        </div>
      ))}
    </div>
    <div class="flex justify-center gap-2">
      <a href="https://github.com/Yorizel/ear-monorepo">
        <Button className="inline-flex items-center gap-2 bg-gradient-to-r from-orange-500 to-orange-400 text-white font-semibold rounded-lg shadow-md hover:shadow-lg hover:from-orange-600 hover:to-orange-500 transition-all duration-300">
          <Github />
          <span>View on Github</span>
        </Button>
      </a>
    </div>
</section>
<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  .bento-card {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }
</style>
