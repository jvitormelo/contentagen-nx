---
   import { Button } from "@packages/ui/components/button";
   import { useTranslations } from "../i18n/utils";
   import type { SupportedLng } from "@packages/localization";

   interface _Props {
      lang?: SupportedLng;
   }

   const { lang = "en" } = Astro.props;
   const t = useTranslations(lang);
---
<section id="community" class="py-16 md:py-24 bg-muted">
   <div class="mx-auto max-w-4xl px-6">
      <div
         class="relative text-center bg-card border rounded-2xl shadow-xl overflow-hidden p-8 md:p-12"
      >
         <!-- Subtle background grid -->
         <div
            aria-hidden="true"
            class="absolute inset-0 bg-[linear-gradient(to_right,#8080801a_1px,transparent_1px),linear-gradient(to_bottom,#8080801a_1px,transparent_1px)] bg-[size:36px_36px] opacity-20 mask-radial-gradient"
         ></div>

         <div class="relative">
            <h2
               class="text-balance text-3xl font-bold md:text-4xl text-foreground"
            >
               {t("pages.landing.community.title")}
            </h2>
            <p
               class="text-muted-foreground mx-auto mt-4 max-w-2xl text-balance"
            >
               {t("pages.landing.community.description")}
            </p>
            <div class="mt-8">
               <button size="lg" className="font-semibold">
                  <a
                     href="https://discord.gg/WsfyJtvF2u"
                     class="flex items-center gap-2 justify-center "
                     target="_blank"
                     rel="noopener noreferrer"
                  >
                     <svg
                        class="size-6"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                     >
