---
   import { Image } from "astro:assets";
   import { ChevronRight } from "@lucide/astro";
   import type { SupportedLng } from "@packages/localization";
   import { Button } from "@packages/ui/components/button";
   import darkHero from "../assets/dark/dark-hero.webp";
   import lightHero from "../assets/light/light-hero.webp";
   import { useTranslations } from "../i18n/utils";

   interface _Props {
      lang?: SupportedLng;
   }

   const { lang = "en" } = Astro.props;
   const t = useTranslations(lang);
---
<main class="overflow-hidden min-h-screen  grid grid-cols-1">
   <div id="hero" class="relative py-36 ">
      <div class="relative z-10 mx-auto w-full max-w-6xl px-6">
         <div class="md:w-3/5">
            <div>
               <p
                  class="text-primary font-semibold text-sm uppercase tracking-wide mb-3"
               >
                  {t("pages.landing.hero.badge")}
               </p>
               <h1 class="max-w-xl text-balance text-5xl font-medium">
                  {t("pages.landing.hero.title")}
               </h1>
               <p
                  class="text-muted-foreground my-8 max-w-lg text-balance text-lg"
               >
                  {t("pages.landing.hero.subtitle")}
               </p>

               <div class="flex items-center gap-3">
                  <a
                     href="https://app.contentagen.com/auth/sign-in"
                     target="_blank"
                     rel="noopener noreferrer"
                  >
                     <button size="lg" className="pr-4.5">
                        <span class="text-nowrap"
                           >{t("pages.landing.hero.cta.primary")}</span
                        >
                        <ChevronRight class="opacity-50"/>
                     </button>
                  </a>
                  <a
                     href="#social-proof"
                     class="text-muted-foreground hover:text-foreground transition-colors text-sm font-medium"
                  >
                     {t("pages.landing.hero.cta.secondary")}â†’
                  </a>
               </div>
            </div>
         </div>
      </div>

      <div
         class="perspective-near mt-24 translate-x-12 md:absolute md:-right-6 md:bottom-16 md:left-1/2 md:top-40 md:mt-0 md:translate-x-0"
      >
         <div
            class="before:border-foreground/5 before:bg-foreground/5 relative h-full before:absolute before:-inset-x-4 before:bottom-7 before:top-0 before:skew-x-6 before:rounded-[calc(var(--radius)+1rem)] before:border"
         >
            <div
               class="bg-background rounded-[calc(var(--radius)+1rem)] shadow-foreground/10 ring-foreground/5 relative h-full -translate-y-12 skew-x-6 overflow-hidden border border-transparent shadow-md ring-1"
            >
               <Image
                  src={lightHero}
                  alt="Contentagen dashboard interface showing AI blog post generation in light mode"
                  class="object-top-left size-full object-cover block dark:hidden"
                  width={Number(lightHero.width)}
                  height={Number(lightHero.height)}
                  loading="eager"
                  fetchpriority="high"
                  sizes="(max-width: 768px) 90vw, (max-width: 1200px) 45vw, 40vw"
                  style="contain-intrinsic-size: 600px 400px"
               />
               <Image
                  src={darkHero}
                  alt="Contentagen dashboard interface showing AI blog post generation in dark mode"
                  class="object-top-left size-full object-cover hidden dark:block"
                  width={Number(darkHero.width)}
                  height={Number(darkHero.height)}
                  loading="eager"
                  fetchpriority="high"
                  sizes="(max-width: 768px) 90vw, (max-width: 1200px) 45vw, 40vw"
                  style="contain-intrinsic-size: 600px 400px"
               />
            </div>
         </div>
      </div>
   </div>
</main>
