---
   import { BotMessageSquare, BrainCircuit, Rocket } from "@lucide/astro";
   import type { SupportedLng } from "@packages/localization";
   import { useTranslations } from "../i18n/utils";

   interface _Props {
      lang?: SupportedLng;
   }

   const { lang = "en" } = Astro.props;
   const t = useTranslations(lang);

   const steps = [
      {
         description: t("pages.landing.howItWorks.steps.create.description"),
         icon: BrainCircuit,
         title: t("pages.landing.howItWorks.steps.create.title"),
      },
      {
         description: t("pages.landing.howItWorks.steps.train.description"),
         icon: BotMessageSquare,
         title: t("pages.landing.howItWorks.steps.train.title"),
      },
      {
         description: t("pages.landing.howItWorks.steps.generate.description"),
         icon: Rocket,
         title: t("pages.landing.howItWorks.steps.generate.title"),
      },
   ];
---
<section id="how-it-works" class="py-16 md:py-24 ">
   <div class="mx-auto max-w-6xl px-6">
      <div class="mx-auto max-w-3xl text-center">
         <h2 class="text-balance text-3xl font-bold md:text-4xl">
            {t("pages.landing.howItWorks.title")}
         </h2>
         <p class="text-muted-foreground mx-auto mt-4 max-w-2xl text-balance">
            {t("pages.landing.howItWorks.subtitle")}
         </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16">
         {
        steps.map(({ icon: Icon, title, description }
         ) => (
         <div
            class="bg-card border rounded-xl p-8 text-center flex flex-col items-center shadow-sm transition-transform hover:-translate-y-1"
         >
            <div class="bg-primary/10 text-primary p-4 rounded-full mb-6">
               <Icon class="size-8"/>
            </div>
            <h3 class="text-xl font-semibold text-foreground">{title}</h3>
            <p class="mt-2 text-muted-foreground text-sm">{description}</p>
         </div>
         )) }
      </div>
   </div>
</section>
