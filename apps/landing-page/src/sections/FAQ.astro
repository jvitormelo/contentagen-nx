---
import { AstroAccordion } from "../components/astro-accordion";
import { useTranslations } from "../i18n/utils";
import type { SupportedLng } from "@packages/localization";

interface _Props {
   lang?: SupportedLng;
}

interface FAQItem {
   id: string;
   question: string;
   answer: string;
}

const { lang = "en" } = Astro.props;
const t = useTranslations(lang);

const faqItems: FAQItem[] = [
   {
      id: "item-1",
      question: t("pages.landing.faq.items.brandVoice.question"),
      answer: t("pages.landing.faq.items.brandVoice.answer"),
   },
   {
      id: "item-2",
      question: t("pages.landing.faq.items.contentTypes.question"),
      answer: t("pages.landing.faq.items.contentTypes.answer"),
   },
   {
      id: "item-3",
      question: t("pages.landing.faq.items.competitorIntelligence.question"),
      answer: t("pages.landing.faq.items.competitorIntelligence.answer"),
   },
   {
      id: "item-4",
      question: t("pages.landing.faq.items.customization.question"),
      answer: t("pages.landing.faq.items.customization.answer"),
   },
   {
      id: "item-5",
      question: t("pages.landing.faq.items.usageCredits.question"),
      answer: t("pages.landing.faq.items.usageCredits.answer"),
   },
   {
      id: "item-6",
      question: t("pages.landing.faq.items.openSource.question"),
      answer: t("pages.landing.faq.items.openSource.answer"),
   },
];
---

<section id="faq" class="py-16 md:py-24 bg-muted min-h-screen grid grid-cols-1">
  <div class="mx-auto max-w-6xl px-6 my-auto">
    <div class="grid gap-8 md:grid-cols-5 md:gap-12">
      <div class="md:col-span-2">
        <h2 class="text-foreground text-4xl font-semibold">{t("pages.landing.faq.title")}</h2>
        <p class="text-muted-foreground mt-4 text-balance text-lg">{t("pages.landing.faq.subtitle")}</p>
        <p class="text-muted-foreground mt-6 hidden md:block">
          {t("pages.landing.faq.supportText")}{' '}
          <a
            href="mailto:contentagen@tutamail.com"
            class="text-primary font-medium hover:underline"
          >
            {t("pages.landing.faq.supportLink")}
          </a>
        </p>
      </div>

      <div class="md:col-span-3">
        <AstroAccordion data={faqItems} client:load/>
      </div>

      <p class="text-muted-foreground mt-6 md:hidden">
        {t("pages.landing.faq.supportText")}{' '}
        <a
          href="mailto:contentagen@tutamail.com"
          class="text-primary font-medium hover:underline"
        >
          {t("pages.landing.faq.supportLink")}
        </a>
      </p>
    </div>
  </div>
</section>
