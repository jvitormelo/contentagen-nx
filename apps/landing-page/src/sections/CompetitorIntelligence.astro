---
   import { Image } from "astro:assets";
   import { CalendarCheck, Layout, Sparkles, Target } from "@lucide/astro";
   import type { SupportedLng } from "@packages/localization";
   import darkImage from "../assets/dark/competitor-dark.webp";
   import lightImage from "../assets/light/competitor-light.webp";
   import { useTranslations } from "../i18n/utils";

   interface _Props {
      lang?: SupportedLng;
   }

   const { lang = "en" } = Astro.props;
   const t = useTranslations(lang);
---
<section id="competitor-intelligence" class="py-24 ">
   <div class="mx-auto w-full max-w-5xl px-6">
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
         <div
            class="bg-card text-card-foreground col-span-full overflow-hidden border shadow-sm pl-6 pt-6"
         >
            <Layout class="text-primary size-5"/>
            <h3 class="text-foreground mt-5 text-lg font-semibold">
               {t("pages.landing.competitorIntelligence.title")}
            </h3>
            <p class="text-muted-foreground mt-3 max-w-xl text-balance">
               {t("pages.landing.competitorIntelligence.description")}
            </p>
            <div class="mask-b-from-95% -ml-2 -mt-2 mr-0.5 pl-2 pt-2">
               <div
                  class="bg-background rounded-tl-lg ring-foreground/5 relative mx-auto mt-8 h-96 overflow-hidden border border-transparent shadow ring-1"
               >
                  <!-- Light Mode Image -->
                  <Image
                     src={lightImage}
                     alt="A dashboard showing competitor analysis with tracked features and content gaps in light mode."
                     class="object-top-left h-full w-full object-cover block dark:hidden"
                     width={1207}
                     height={929}
                  />
                  <!-- Dark Mode Image -->
                  <Image
                     src={darkImage}
                     alt="A dashboard showing competitor analysis with tracked features and content gaps in dark mode."
                     class="object-top-left h-full w-full object-cover hidden dark:block"
                     width={1207}
                     height={929}
                  />
               </div>
            </div>
         </div>

         <div
            class="bg-card text-card-foreground rounded-xl border py-6 shadow-sm p-6"
         >
            <Target class="text-primary size-5"/>
            <h3 class="text-foreground mt-5 text-lg font-semibold">
               {t("pages.landing.competitorIntelligence.features.gaps.title")}
            </h3>
            <p class="text-muted-foreground mt-3 text-balance">
               {t("pages.landing.competitorIntelligence.features.gaps.description")}
            </p>
         </div>

         <div
            class="bg-card text-card-foreground rounded-xl border py-6 shadow-sm p-6"
         >
            <CalendarCheck class="text-primary size-5"/>
            <h3 class="text-foreground mt-5 text-lg font-semibold">
               {t("pages.landing.competitorIntelligence.features.ideas.title")}
            </h3>
            <p class="text-muted-foreground mt-3 text-balance">
               {t("pages.landing.competitorIntelligence.features.ideas.description")}
            </p>
         </div>

         <div
            class="bg-card text-card-foreground rounded-xl border py-6 shadow-sm p-6"
         >
            <Sparkles class="text-primary size-5"/>
            <h3 class="text-foreground mt-5 text-lg font-semibold">
               {t("pages.landing.competitorIntelligence.features.tracking.title")}
            </h3>
            <p class="text-muted-foreground mt-3 text-balance">
               {t("pages.landing.competitorIntelligence.features.tracking.description")}
            </p>
         </div>
      </div>
   </div>
</section>
