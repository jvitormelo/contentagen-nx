---
   import { Image } from "astro:assets";
   import type { SupportedLng } from "@packages/localization";
   import liciteiLogo from "../assets/teams/licitei-logo.svg";
   import { useTranslations } from "../i18n/utils";

   interface Props {
      lang?: SupportedLng;
   }

   const { lang = "en" } = Astro.props;
   const t = useTranslations(lang);
---
<section class=" relative py-16 md:py-24 ">
   <div class="mx-auto max-w-6xl px-6">
      <div class="mx-auto max-w-2xl text-center">
         <blockquote>
            <p class="text-lg font-medium sm:text-xl md:text-3xl">
               {t("pages.landing.socialProof.quote")}
            </p>

            <div class="mt-12 flex items-center justify-center gap-6">
               <Image
                  src={liciteiLogo}
                  alt="Licitei Logo"
                  class="size-12 rounded-full"
                  width={48}
                  height={48}
                  loading="lazy"
               />

               <div class="space-y-1 border-l pl-6">
                  <cite class="font-medium">
                     {t("pages.landing.socialProof.author")}
                  </cite>
                  <span class="text-muted-foreground block text-sm"
                     >{t("pages.landing.socialProof.role")}</span
                  >
               </div>
            </div>
         </blockquote>
      </div>
   </div>
</section>
