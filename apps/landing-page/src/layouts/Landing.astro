---
   import "@packages/ui/globals.css";
   import brandConfig from "@packages/brand/index.json";
   import type { SupportedLng } from "@packages/localization";
   import { getAstroPosthogConfig } from "@packages/posthog/client";

   interface Props {
      lang?: SupportedLng;
   }

   const { lang = "en" } = Astro.props;
---
<!doctype html>
<html lang={lang} class="scrolsmooth">
   <head>
      <link rel="sitemap" href="/sitemap-index.xml">
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width">
      <meta
         name="description"
         content="ContentaGen's AI agents learn your brand voice and create SEO-optimized blog posts that increase organic traffic by 65%+ while cutting content production time by 80%. Perfect for B2B SaaS and content teams."
      >
      <meta
         name="keywords"
         content="AI content generation, B2B SaaS content, SEO blog posts, content automation, brand voice AI"
      >
      <meta name="author" content={`${brandConfig.author} `}>
      <link rel="icon" type="image/svg+xml" href="/favicon.svg">
      <meta name="generator" content={Astro.generator}>
      <link rel="canonical" href="https://contentagen.com/">

      <!-- Preload Critical Resources -->
      <link
         rel="preload"
         as="image"
         href="/src/assets/light/light-hero.webp"
         media="(prefers-color-scheme: light)"
      >
      <link
         rel="preload"
         as="image"
         href="/src/assets/dark/dark-hero.webp"
         media="(prefers-color-scheme: dark)"
      >

      <!-- Open Graph Metadata -->
      <meta property="og:title" content={`${brandConfig.name} `}>
      <meta
         property="og:description"
         content={`Discover ${brandConfig.name}
         ,
         a
         modern
         solution
         for
         all
         your
         needs.
         Join
         us
         to
         explore
         innovative
         features,
         seamless
         integrations,
         and
         unparalleled
         support.`}
      >
      <meta property="og:image" content="/og-image.webp">
      <meta property="og:url" content="https://contentagen.com">
      <meta property="og:type" content="website">
      {import.meta.env.PROD && <script set:html={getAstroPosthogConfig()}
      is:inline/>}
      <title>
         ContentaGen - Generate Ready-to-Publish Content in Minutes for B2B SaaS
      </title>
   </head>
   <body>
      <slot/>
   </body>
</html>
