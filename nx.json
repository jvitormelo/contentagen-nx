{
   "$schema": "./node_modules/nx/schemas/nx-schema.json",
   "defaultBase": "master",
   "targetDefaults": {
      "typecheck": {
         "cache": true,
         "dependsOn": ["^typecheck"],
         "inputs": ["{projectRoot}/**/*", "{projectRoot}/.env*"],
         "outputs": []
      },
      "build": {
         "cache": true,
         "dependsOn": ["^build:all"],
         "inputs": ["{projectRoot}/**/*", "{projectRoot}/.env*"],
         "outputs": []
      },
      "check": {
         "cache": true,
         "dependsOn": ["^check"],
         "inputs": ["{projectRoot}/**/*", "{projectRoot}/.env*"],
         "outputs": []
      },
      "test": {
         "cache": true,
         "dependsOn": ["^test"],
         "inputs": ["{projectRoot}/**/*", "{projectRoot}/.env*"],
         "outputs": []
      },
      "dev": {
         "cache": false
      }
   },
   "tui": {
      "enabled": true
   },
   "release": {
      "projects": ["*"],
      "projectsRelationship": "fixed",
      "releaseTagPattern": "v{version}",
      "version": {
         "conventionalCommits": true,
         "preserveLocalDependencyProtocols": true,
         "versionActionsOptions": {
            "skipLockFileUpdate": false
         }
      },
      "changelog": {
         "workspaceChangelog": {
            "createRelease": "github",
            "file": true
         },
         "projectChangelogs": {
            "createRelease": false,
            "file": true
         }
      },
      "git": {
         "commit": true,
         "tag": true
      }
   }
}
